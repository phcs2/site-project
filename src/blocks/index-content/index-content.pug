mixin index-content()
  main.index-content
    .index-content__slider
      h1.index-content__slider-heading
        a(href="#") Тобиас
      div 4800 ₽
      p Эргономичная форма сиденья и спинки обеспечивает максимальный комфорт.
    .index-content__products-wrapper
      +index-content-product('Стулья', 28, 9500)
      +index-content-product('Столы', 46, 17200)
      +index-content-product('Диваны', 32, 35500)
    +index-content-product('Стенки', 24, 44800, 'last')


mixin index-content-product(name, count, price, mod)
  -var mod = (typeof(mod) === 'undefined') ? '' : 'index-content__product--' + mod;
  a.index-content__product(class=mod href="#")
        h2= name
        div
          h4= name
            span= '(' + count + ')'
        div
          p= 'от ' + price + ' ₽'